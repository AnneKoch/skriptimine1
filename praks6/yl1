#!/bin/bash
#
# Kas antud arv on paaris vÃµi paaritu
#
# skripti algus
#
# arvude sisestamine
echo -n "Sisesta suvaline taisarv: "
read arv
# arvutame jaak 2-ga jagamisel
jaak=$(($arv % ))
# 8 % 2 => 0 -> siis on antud  arv paaris
# 3 % 2 => 1 -> siis on antud  arv paaritu
if [$jaak -eq 0]
then
   echo "$arv on paaris"
else
    echo "$arv on paaritu"
fi
#
# skripti lopp


